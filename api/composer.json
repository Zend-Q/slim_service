{
    "name": "course/demo-slim",
    "type": "project",
    "license": "BSD-3-Clause",
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "require": {
        "php": "^8.3",
        "ext-json": "*",
        "php-di/php-di": "^7.0",
        "slim/psr7": "^1.7",
        "slim/slim": "^4.14",
        "symfony/console": "^7.1"
    },
    "require-dev": {
        "overtrue/phplint": "^9.5",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.10",
        "vimeo/psalm": "^5.26"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "lint": "phplint",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "psalm": "psalm",
        "app": "php bin/app.php --ansi"
    }
}
