{
    "name": "course/demo-slim",
    "type": "project",
    "license": "BSD-3-Clause",
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "require": {
        "php": "^8.3",
        "ext-json": "*",
        "php-di/php-di": "^7.0",
        "slim/psr7": "^1.7",
        "slim/slim": "^4.14",
        "symfony/console": "^7.1"
    },
    "require-dev": {
        "overtrue/phplint": "^9.5",
        "phpunit/phpunit": "^9.6",
        "roave/security-advisories": "dev-master",
        "vimeo/psalm": "^5.26",
        "friendsofphp/php-cs-fixer": "^3.40"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "scripts": {
        "lint": "phplint",
        "php-cs-fixer": "vendor/bin/php-cs-fixer --config=.php-cs-fixer.php --allow-risky=yes",
        "psalm": "psalm",
        "test": "phpunit --colors=always",
        "app": "php bin/app.php --ansi"
    }
}
